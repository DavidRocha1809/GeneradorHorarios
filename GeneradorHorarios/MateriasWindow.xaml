<Window x:Class="GeneradorHorarios.MateriasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Materias" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registro de Materias" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Nombre de la Materia:"/>
            <TextBox x:Name="txtNombreMateria" Height="25" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Agregar / Guardar" Click="Agregar_Click" 
                        Width="120" Height="30" Background="#007ACC" Foreground="White" FontWeight="Bold" Margin="5,0"/>
                <Button Content="Eliminar" Click="Eliminar_Click" 
                        Width="80" Height="30" Background="#DC3545" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Lista de Materias:" Grid.Row="2" Margin="0,15,0,5" VerticalAlignment="Top"/>

        <ListBox x:Name="lstMaterias" Grid.Row="2" Margin="0,31,0,0" 
                 DisplayMemberPath="Nombre" BorderBrush="Gray"
                 SelectionChanged="ListaMaterias_SelectionChanged"/>

        <Button Grid.Row="3" Content="Cerrar" IsCancel="True" Margin="0,10,0,0" Height="25"/>
    </Grid>
</Window>