<Window x:Class="GeneradorHorarios.MateriasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:GeneradorHorarios.Models"
        Title="Administrar Materias" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ListaMaterias"
                 DisplayMemberPath="Nombre"
                 SelectionChanged="ListaMaterias_SelectionChanged"/>

        <StackPanel Grid.Column="1" Margin="20">

            <TextBlock Text="Nombre:" FontWeight="Bold"/>
            <TextBox x:Name="TxtNombre" Margin="0 5"/>

            <TextBlock Text="Área:" FontWeight="Bold"/>
            <TextBox x:Name="TxtArea" Margin="0 5"/>

            <StackPanel Orientation="Horizontal" Margin="0 20" HorizontalAlignment="Center">
                <Button Content="Guardar" Width="100" Margin="10" Click="Guardar_Click"/>
                <Button Content="Agregar" Width="100" Margin="10" Click="Agregar_Click"/>
                <Button Content="Eliminar" Width="100" Margin="10" Click="Eliminar_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
