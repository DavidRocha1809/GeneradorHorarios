<Window x:Class="GeneradorHorarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Generador de Horarios" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Generador de Horarios Escolares" 
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Gestionar Materias" Click="BtnAbrirMaterias_Click"
                    Width="150" Height="35" Margin="10,0" Background="#DDDDDD"/>
            <Button Content="Gestionar Profesores" Click="BtnAbrirProfesores_Click"
                    Width="150" Height="35" Margin="10,0" Background="#DDDDDD"/>
        </StackPanel>

        <DockPanel Grid.Row="2">
            <TextBlock Text="Selecciona un Profesor para generar su horario:" 
                       DockPanel.Dock="Top" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ListBox x:Name="lstProfesores" BorderBrush="#999999" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="14" FontWeight="Bold">
                                <Run Text="{Binding ApellidoPaterno}"/>
                                <Run Text="{Binding ApellidoMaterno}"/>
                                <Run Text="{Binding Nombre}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding Departamento}" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

            <Button x:Name="btnWord" Content="📄 Generar en WORD" Click="BtnGenerarWord_Click"
                    Width="180" Height="50" Margin="15,0" 
                    Background="#2B579A" Foreground="White" FontWeight="Bold" FontSize="14">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnExcel" Content="📊 Generar en EXCEL" Click="BtnGenerarExcel_Click"
                    Width="180" Height="50" Margin="15,0" 
                    Background="#217346" Foreground="White" FontWeight="Bold" FontSize="14">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="🗑 Liberar Horas" Click="BtnLiberarHoras_Click"
                    Width="120" Height="50" Margin="10,0" 
                    Background="#C0392B" Foreground="White" FontWeight="Bold"
                    ToolTip="Borra el horario generado de este profesor y libera sus grupos."/>

        </StackPanel>
    </Grid>
</Window>